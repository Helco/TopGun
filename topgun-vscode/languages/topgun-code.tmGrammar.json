{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.topgun.code",
    "patterns": [{ "include": "#script" }],
    "repository": {
        "script": {
            "name": "topgun.script",
            "begin": "(\\w+)\\s*-\\s*(\\d+)\\s*(?:-\\s*(\\w[\\w\\-_]+))?",
            "end": "^\\s*$",
            "beginCaptures": {
                "1": { "name": "entity.name.class" },
                "2": { "name": "constant.numeric"},
                "3": { "name": "entity.name.function" }
            },
            "patterns": [{ "include": "#instruction" }]
        },
        "instruction": {
            "name": "topgun.instruction",
            "patterns": [
                { "include": "#dynamic-call" },
                { "include": "#designated-call" },
                { "include": "#direct-call" },
                { "include": "#root-op" },
                { "include": "#control-keywords" },
                { "include": "#global-variable" },
                { "include": "#local-variable" },
                { "include": "#number" },
                { "include": "#operator" }
            ]
        },
        "dynamic-call": {
            "name": "keyword.other",
            "match": "(DynamicScript|Dynamic|Internal|UnknownExternal)(?:\\[)"
        },
        "designated-call": {
            "name": "topgun.invoke.designated",
            "match": "(Script|External)\\[(?:(\\d+)|([\\w\\.]+))\\]<(\\d+)>",
            "captures": {
                "1": { "name": "keyword.other" },
                "2": { "name": "constant.numeric" },
                "3": { "name": "entity.name.function" },
                "4": { "name": "constant.numeric" }
            }
        },
        "direct-call": {
            "name": "topgun.invoke.direct",
            "match": "(\\w+)<(\\d+)>",
            "captures": {
                "1": { "name": "entity.name.function" },
                "2": { "name": "constant.numeric" }
            }
        },
        "root-op": {
            "name": "topgun.root",
            "begin": "^\\s*(\\d+):\\s*(\\w+)",
            "end": "\\n",
            "beginCaptures": {
                "1": { "name": "entity.name.section" },
                "2": { "name": "keyword.other" }
            },
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "\\#\\d+"
                },
                {
                    "name": "constant.language",
                    "match": "\\[\\d+\\]"
                },
                {
                    "name": "constant.character",
                    "match": "\\$\\d+"
                },
                {
                    "name": "variable.parameter",
                    "match": "\\w+"
                }
            ]
        },
        "control-keywords": {
            "name": "keyword.control",
            "match": "(?:[^\\w]|^)(if|else|while|do|switch|case|default|return)(?:[^\\w]|$)"
        },
        "global-variable": {
            "name": "variable.other",
            "match": "&?global\\d+"
        },
        "local-variable": {
            "name": "variable.parameter",
            "match": "&?local\\d+"
        },
        "number": {
            "name": "constant.numeric",
            "match": "-?\\d+"
        },
        "operator": {
            "name": "keyword.operator",
            "match": "\\|\\|\\??|\\&\\&\\??|\\||\\&|\\^|==|!=|<[<=]|>[>=]|\\+|-|\\*|\\/|%|="
        }
    }
}